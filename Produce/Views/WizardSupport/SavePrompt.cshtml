@{
    Layout = "~/Views/Shared/_LayoutSubpage.cshtml";
}

<script type="text/javascript">
    function doOk() {
        if (document.getElementById('txtSaveMessageDescription').value.replace(/^\s+|\s+$/g, '') == '') {
            alert('@Resources.Strings.DescriptionMandatory');
            document.getElementById('txtSaveMessageDescription').focus();
            return false;
        } else {
            parent.wiz.saveProgressDialog(document.getElementById('txtSaveMessageDescription').value);
            return true;
        }
    }

    function doCancel() {
        parent.wiz.closeModal();
    }

    $(document).ready(function () {
        $("#txtSaveMessageDescription").focus();
    });
</script>
<form method="post" id="aspnetForm" onsubmit="return doOk();">
    <div class="container">
        <div id="SaveMessage" class="form-group">
            <label for="txtSaveMessageDescription">@Resources.Strings.EnterSaveDescription</label>
            <input id="txtSaveMessageDescription" name="txtSaveMessageDescription" class="form-control" autofocus="autofocus" value="@ViewBag.SaveMessageDescription" />
        </div>
        <div class="pull-right">
            <input type="button" id="OK" onclick="doOk()" value="@Resources.Strings.OK" class="btn btn-primary" />
            <input type="button" id="Cancel" onclick="doCancel()" value="@Resources.Strings.Cancel" class="btn btn-default" />
        </div>
    </div>
</form>